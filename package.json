		"typescript": "5.7.2"
	},
	"engines": {
		"bun": ">=1.1.41"
	},
	"packageManager": "bun@1.1.41",
	"workspaces": ["app", "app/frontend", "packages/*"],
	"trustedDependencies": [
		"@biomejs/biome",
		"@swc/core",
		"core-js-pure",
		"esbuild",
		"sharp"
	]

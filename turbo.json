{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist", "../dist/client"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": { "inputs": [".env*"] },
		"test:watch": { "inputs": [".env*"], "persistent": true },
		"preview": {
			"dependsOn": ["^build", "build"],
			"inputs": ["dist", ".env*"],
			"cache": false,
			"persistent": true
		},
		"//#check": {},
		"//#check:fix": {
			"cache": false
		}
	}
}
